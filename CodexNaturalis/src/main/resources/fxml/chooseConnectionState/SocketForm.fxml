<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<AnchorPane id="mainPane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="40">
        <VBox alignment="CENTER" spacing="20.0">
            <Text text="Enter Socket IP Address:" />
            <TextField fx:id="IpSocketField" alignment="CENTER" maxHeight="110.0" maxWidth="400.0" prefHeight="100.0" prefWidth="400.0">
                <font>
                    <Font size="40.0" />
                </font>
            </TextField>
            <Label fx:id="errorSocket" text="" />
        </VBox>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#submitSocket" text="Submit" textAlignment="CENTER"/>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#goBackConnection" text="Back" textAlignment="CENTER" />
    </VBox>

</AnchorPane>

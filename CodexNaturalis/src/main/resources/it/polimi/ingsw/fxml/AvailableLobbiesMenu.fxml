<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane id="mainPane" fx:id="availableLobbiesMenuFX" maxHeight="1080.0" maxWidth="1920.0" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../css/AvailableLobbies.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.controller.AvailableLobbiesController">
   <top>
      <HBox alignment="CENTER" prefHeight="200.0" prefWidth="1920.0" spacing="400.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Refresh" onAction="#refreshLobbies"/>
            <Button mnemonicParsing="false" onAction="#goBack" text="Back" />
         </children>
      </HBox>
   </top>

   <center>
      <TableView fx:id="lobbiesTable" prefHeight="720.0" prefWidth="1800.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="lobbyName" prefWidth="1160.0" text="Lobby name"/>
          <TableColumn fx:id="numPlayers" minWidth="0.0" prefWidth="385.0" text="Players online" />
            <TableColumn fx:id="numRequired" prefWidth="375.0" text="Players required" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>

   <bottom>
      <Label fx:id="errorShowLobbies" id="errorShowLobbies" alignment="CENTER" prefHeight="110.0" prefWidth="900.0" text="Label" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>

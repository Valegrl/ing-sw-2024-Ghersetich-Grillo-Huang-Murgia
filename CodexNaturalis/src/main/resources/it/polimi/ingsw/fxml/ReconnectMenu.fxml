<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="mainAnchor" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="1080.0" minWidth="1920.0" stylesheets="@../css/ReconnectMenu.css, @../css/Buttons.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.controller.ReconnectMenuController">
   <children>
      <HBox alignment="CENTER" minHeight="200.0" spacing="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button mnemonicParsing="false" onAction="#goBack" text="Back" fx:id="backButton"/>
         </children>
      </HBox>
      <VBox alignment="BOTTOM_CENTER" minHeight="800.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label id="reconnectLabel" fx:id="reconnectLabel" text="Reconnect to disconnected game ?" />
            <Label id="errorLabel" fx:id="errorLabel" text="Something" visible="false" />
            <TableView fx:id="lobbiesTable" maxWidth="1200.0" minHeight="500.0" minWidth="730.0">
               <columns>
                  <TableColumn fx:id="lobbyName" text="Lobby name" />
                  <TableColumn fx:id="numPlayers" text="Players online" />
                  <TableColumn fx:id="numRequired" text="Players required" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>

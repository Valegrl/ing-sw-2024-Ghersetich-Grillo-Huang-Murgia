<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainAnchor" minHeight="720.0" minWidth="1280.0" stylesheets="@../css/ReconnectMenu.css, @../css/Buttons.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.controller.ReconnectMenuController">
   <children>
      <VBox fx:id="vBox" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">
         <children>
            <Label id="reconnectLabel" fx:id="reconnectLabel" text="Reconnect to disconnected game ?" />
            <Label id="errorLabel" fx:id="errorLabel" text="Something" visible="false" />
            <TableView fx:id="lobbiesTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="lobbyName" text="Lobby name" />
                  <TableColumn fx:id="numPlayers" text="Players online" />
                  <TableColumn fx:id="numRequired" text="Players required" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      <HBox alignment="CENTER" minHeight="40" maxHeight="40" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" text="Back" styleClass="buttonSmall" onAction="#goBack"  />
            <Button fx:id="quitButton" alignment="CENTER" mnemonicParsing="false" text="Quit" styleClass="buttonSmall" visible="false" managed="false" onAction="#quit"/>
         </children>
      </HBox>
   </children>
</AnchorPane>

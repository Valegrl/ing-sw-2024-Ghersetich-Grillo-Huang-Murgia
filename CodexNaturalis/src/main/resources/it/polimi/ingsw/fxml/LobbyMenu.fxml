                                        <ImageView fitHeight="340.0" fitWidth="260.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/lobby/fungi.png" />
                                            </image>
                                            <VBox.margin>
                                                <Insets bottom="20.0" />
                                            </VBox.margin>
                                        </ImageView>

                                        <Text fx:id="username0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="300.0">
                                            <font>
                                                <Font size="25.0" />
                                            </font>
                                            <VBox.margin>
                                                <Insets bottom="20.0" />
                                            </VBox.margin>
                                        </Text>
                                        <Text fx:id="readyStatus0" strokeType="OUTSIDE" strokeWidth="0.0" />
                                        <Button fx:id="playerButton0" mnemonicParsing="false" />
                                    </children>
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane id="stackPane1" fx:id="playerStackPane1" maxHeight="700.0" maxWidth="300.0" visible="false">

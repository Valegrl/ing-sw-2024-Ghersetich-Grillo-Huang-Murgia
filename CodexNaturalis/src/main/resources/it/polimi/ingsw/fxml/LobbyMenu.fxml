                        <Insets top="20.0" />
                    </VBox.margin>
                </Text>
                <HBox fx:id="hBox" alignment="CENTER" minWidth="1600.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>

                        <StackPane id="stackPane0" fx:id="playerStackPane0" maxHeight="700.0" maxWidth="300.0" visible="false">
                            <children>
                                <VBox alignment="CENTER" prefHeight="700.0" prefWidth="300.0">
